<?xml version="1.0"?>
<launch>
	
  <arg name="prefix" default="summit_xl_"/> 
  <arg name="x_init_pose" default="0"/>
  <arg name="y_init_pose" default="0"/>
  <arg name="z_init_pose" default="0"/>

  <!--- Run AMCL -->
  <include file="$(find summit_xl_navigation)/launch/amcl.launch" >
	  <arg name="prefix" value="$(arg prefix)"/>
	  <arg name="x_init_pose" value="$(arg x_init_pose)"/>
      <arg name="y_init_pose" value="$(arg y_init_pose)"/>
      <arg name="z_init_pose" value="$(arg z_init_pose)"/>
  </include>
 
  <!-- Run move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find summit_xl_navigation)/$(arg prefix)config/move_base_params.yaml" command="load" />
    <rosparam file="$(find summit_xl_navigation)/$(arg prefix)config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find summit_xl_navigation)/$(arg prefix)config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find summit_xl_navigation)/$(arg prefix)config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find summit_xl_navigation)/$(arg prefix)config/global_costmap_params_map.yaml" command="load" />
    <rosparam file="$(find summit_xl_navigation)/$(arg prefix)config/teb_local_planner_params.yaml" command="load" />

    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <param name="controller_frequency" value="5.0" />
    <param name="controller_patience" value="15.0" /> 
     <remap from="cmd_vel" to="summit_xl_control/cmd_vel" /> 
    <remap from="odom" to="summit_xl_control/odom" />    
    <remap from="map" to="/map"/>
  
  </node>
  
</launch>
